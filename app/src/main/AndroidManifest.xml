<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.exploreca.imdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/imdb"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.exploreca.imdb.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.exploreca.imdb.MovieCategory.UpcomingMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieCategory.LatestMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieCategory.NowPlayingMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieCategory.PopularMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieCategory.TopRatedMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieDetailActivity"></activity>
        <activity android:name="com.exploreca.imdb.MyMovies"></activity>
        <activity android:name="com.exploreca.imdb.MovieTrailer"></activity>

    </application>

</manifest>